content-width = 65%

*
	margin 0
	padding 0
	box-sizing border-box
	
body
	header
		width 100%
		height 80px
		.header-bg
			width 100%
			height 69px
			background-color #76c7c0
			.content-wrapper
				width content-width
				margin 0 auto
				.logo
					font-family OpenSans
					color #ffffff
					display inline-block
					vertical-align middle
					line-height 79px
					cursor pointer
					div
						display inline-block
						vertical-align middle
					.modus
						font-family OpenSans-Extrabold
						font-size 30px
						text-transform uppercase
					.versus
						font-size 25px
				.nav-wrapper
					float right
					height 80px
					.hidden-menu
						display none
						position absolute
						top 26px
						right 20px
						font-family OpenSans-Semibold
						font-size 13px
						text-transform uppercase
						color #ffffff
						padding 5px 10px 5px 10px
						border-radius 5px
						background-color #62a29e
						-webkit-box-shadow 0px 3px 0px 0px rgba(82, 139, 134, 1)
						-moz-box-shadow    0px 3px 0px 0px rgba(82, 139, 134, 1)
						box-shadow         0px 3px 0px 0px rgba(82, 139, 134, 1)
						&:hover
							background-color #e8645a
							-webkit-box-shadow 0px 3px 0px 0px rgba(226, 83, 75, 1)
							-moz-box-shadow    0px 3px 0px 0px rgba(226, 83, 75, 1)
							box-shadow         0px 3px 0px 0px rgba(226, 83, 75, 1)
							cursor pointer
					.nav
						float right
						display flex
						flex-direction row
						flex-wrap wrap
						font-family OpenSans-Semibold
						font-size 13px
						height 80px
						align-items center
						div
							text-transform uppercase
							color #ffffff
							margin-left 15px
							padding 5px 10px 5px 10px
							border-radius 5px
							&:hover
								background-color #e8645a
								-webkit-box-shadow 0px 3px 0px 0px rgba(226, 83, 75, 1)
								-moz-box-shadow    0px 3px 0px 0px rgba(226, 83, 75, 1)
								box-shadow         0px 3px 0px 0px rgba(226, 83, 75, 1)
								cursor pointer
						.home
							background-color #62a29e
							-webkit-box-shadow 0px 3px 0px 0px rgba(82, 139, 134, 1)
							-moz-box-shadow    0px 3px 0px 0px rgba(82, 139, 134, 1)
							box-shadow         0px 3px 0px 0px rgba(82, 139, 134, 1)
						.search
							background url('../images/search.png') center no-repeat
							width 20px
							height 18px
		.header-ruller
			width 100%
			height 13px
			background url('../images/ruler-bg.jpg') center repeat-x